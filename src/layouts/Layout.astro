---
interface Props {
  title: string;
  ogTitle?: string | undefined;
  ogDescription?: string | undefined;
}

const { title, ogTitle, ogDescription } = Astro.props;
const defaultOgTitle = "The Night Latch";
const defaultOgDescription = "Cocktail menu for The Night Latch, a home bar in Brooklyn.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Cocktail menu for The Night Latch, a home bar in Brooklyn." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle || defaultOgTitle} />
    <meta property="og:description" content={ogDescription || defaultOgDescription} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content="https://thenightlatch.com/og.png" />
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={ogTitle || defaultOgTitle} />
    <meta name="twitter:description" content={ogDescription || defaultOgDescription} />
    <meta name="twitter:image" content="https://thenightlatch.com/og.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script>
      function isDark() {
        return (
          localStorage.theme === "dark" ||
          (!("theme" in localStorage) &&
            window.matchMedia("(prefers-color-scheme: dark)").matches)
        );
      }

      function refreshTheme() {
        // On page load or when changing themes, best to add inline in `head` to avoid FOUC
        document.documentElement.classList.toggle("dark", isDark());
      }

      // Attach toggleTheme to the global window object to ensure it's available everywhere
      window.toggleTheme = function () {
        localStorage.theme = isDark() ? "light" : "dark";
        refreshTheme();
      };

      refreshTheme();
    </script>
  </head>
  <body>
    <slot />
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        // Find all buttons with the `alert` class on the page.
        const toggleThemeButton = document.querySelectorAll("h1");

        // Handle clicks on each button.
        toggleThemeButton.forEach((button) => {
          button.addEventListener("click", () => {
            window.toggleTheme();
          });
        });
      });
    </script>
  </body>
</html>

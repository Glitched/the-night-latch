---
import "@/styles/globals.css";
import Menu from "../components/Menu";
import Layout from "../layouts/Layout.astro";
import { menu } from "@/menu";
import { findDrinkBySlug, normalizeSlug } from "@/utils/drinkSlug";

export function getStaticPaths() {
  const paths = [];

  for (const drink of menu) {
    // Add hyphenated version: "Rob Roy" -> "rob-roy"
    const hyphenated = drink.title.toLowerCase().replace(/\s+/g, "-");
    paths.push({ params: { slug: hyphenated } });

    // Add compact version: "Rob Roy" -> "robroy"
    const compact = normalizeSlug(drink.title);
    if (compact !== hyphenated.replace(/-/g, "")) {
      paths.push({ params: { slug: compact } });
    }
  }

  return paths;
}

const { slug } = Astro.params;
const drink = findDrinkBySlug(slug || "");
const drinkTitle = drink?.title || null;
const pageTitle = drink ? `${drink.title} | The Night Latch` : "The Night Latch";
const ogTitle = drink ? `${drink.title} | The Night Latch` : undefined;
const ogDescription = drink ? `Recipe for ${drink.title} at The Night Latch, a home bar in Brooklyn.` : undefined;
---

<Layout title={pageTitle} ogTitle={ogTitle} ogDescription={ogDescription}>
  <div id="cover">
    <span id="latch">L</span>
  </div>
  <main class="min-h-screen flex flex-col">
    <nav>
      <a href="/"><h1>The Night Latch.</h1></a>
      <img
        src="/drink.svg"
        id="logo"
        alt="An illustration of a martini."
        class="pr-4"
      />
    </nav>
    <div class="flex flex-col flex-grow min-h-screen">
      <Menu client:load initialDrink={drinkTitle} />
      <footer class="print:hidden mt-auto">
        <a href="https://RyanSlama.com" target="_blank">Made with ♥︎ by Ryan</a
        >.
      </footer>
    </div>
  </main>

  <style>
    #cover {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: hsl(var(--background));
      color: hsl(var(--foreground));
      font-size: 10rem;
      line-height: 1;
      pointer-events: none;
      z-index: 1000;
      text-align: center;
      animation: 1s fadeOut 0s 1 ease-in-out;
      animation-fill-mode: forwards;
      padding-top: 200px;
    }

    #latch {
      animation: 1s rotate 0s 1 cubic-bezier(0.57, 0, 0.21, 1.52);
      transform: rotate(0deg);
      display: block;
      margin: auto;
      width: 100px;
    }

    @keyframes fadeOut {
      0% {
        opacity: 1;
      }
      100% {
        opacity: 0;
      }
    }

    @keyframes rotate {
      0% {
        transform: rotate(-90deg);
      }
      100% {
        transform: rotate(0deg);
      }
    }

    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    nav a {
      text-decoration: none;
    }

    html.dark #logo {
      filter: invert(1);
    }

    #logo {
      transition: transform 0.3s cubic-bezier(0.33, 0, 0.59, 2.17);
      user-select: none;
    }

    #logo:hover {
      transform: rotate(4deg);
    }

    main {
      margin: auto;
      padding: 1rem;
      width: 800px;
      max-width: calc(100% - 2rem);
      color: hsl(var(--foreground));
      font-size: 20px;
      line-height: 1.6;
    }

    h1 {
      font-size: 4rem;
      width: 250px;
      color: hsl(var(--foreground));
      line-height: 1;
      font-weight: 100;
      margin-top: 1.3em;
      margin-bottom: 1em;
      user-select: none;
    }

    footer {
      margin-top: 4rem;
      text-align: center;
      color: hsl(var(--muted-foreground));
    }
  </style>
</Layout>
